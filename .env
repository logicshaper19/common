# Database Configuration
# For development with SQLite
DATABASE_URL=postgresql://elisha@localhost:5432/common_dev
# For production with PostgreSQL
# DATABASE_URL=postgresql://common_user:common_password@localhost:5432/common_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
RESEND_API_KEY=your-resend-api-key

# Application Configuration
APP_NAME=Common Supply Chain Platform
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Transparency Calculation Configuration
TRANSPARENCY_DEGRADATION_FACTOR=0.95
TRANSPARENCY_CALCULATION_TIMEOUT=30
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:3001
# Dashboard V2 Feature Flags Configuration
# Copy these to your .env file to enable/disable dashboard v2 features

# Phase 0: Foundation (Week 1)
# All disabled by default for gradual rollout
V2_DASHBOARD_BRAND=false
V2_DASHBOARD_PROCESSOR=false
V2_DASHBOARD_ORIGINATOR=false
V2_DASHBOARD_TRADER=false
V2_NOTIFICATION_CENTER=false

# Example: Enable brand dashboard for testing
# V2_DASHBOARD_BRAND=true

# Example: Enable all dashboards for development
# V2_DASHBOARD_BRAND=true
# V2_DASHBOARD_PROCESSOR=true
# V2_DASHBOARD_ORIGINATOR=true
# V2_DASHBOARD_TRADER=true
# V2_NOTIFICATION_CENTER=true
V2_DASHBOARD_PLATFORM_ADMIN=true
V2_DASHBOARD_ORIGINATOR=true
ENVIRONMENT=development

# Consolidated Feature Flags (Phase 5)
V2_FEATURES_ENABLED=true
V2_COMPANY_DASHBOARDS=true
V2_ADMIN_FEATURES=true
