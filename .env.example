# Environment Configuration Template
# Copy this file to .env and update the values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Use environment-specific database URLs
# Development: postgresql://user:password@localhost:5432/db_name
# Production: Use managed database service (e.g., Neon, Railway, etc.)
DATABASE_URL=postgresql://user:password@localhost:5432/common_platform
DATABASE_POOL_SIZE=10

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Generate a strong JWT secret key (32+ characters)
# Use: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
REDIS_URL=redis://localhost:6379
RESEND_API_KEY=your-resend-api-key-here

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# BUSINESS LOGIC
# =============================================================================
TRANSPARENCY_DEGRADATION_FACTOR=0.95
TRANSPARENCY_CALCULATION_TIMEOUT=30

# =============================================================================
# ADMIN USER CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@common.co
ADMIN_PASSWORD=change-this-strong-password
ADMIN_NAME=System Administrator
ADMIN_COMPANY_NAME=Common Platform Admin

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_V2_ENABLED=false
FEATURE_COMPANY_ENABLED=false
FEATURE_ADMIN_ENABLED=false
