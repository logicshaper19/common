# Production Environment Configuration

# Application Configuration
APP_NAME=Common Supply Chain Platform
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=WARNING

# Database Configuration
DATABASE_URL=postgresql://common_prod_user:${POSTGRES_PASSWORD}@prod-db.common.com:5432/common_production
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}

# Redis Configuration
REDIS_URL=redis://prod-redis.common.com:6379/0

# JWT Configuration
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
RESEND_API_KEY=${RESEND_API_KEY}

# CORS Configuration
ALLOWED_ORIGINS=https://app.common.com,https://admin.common.com

# Transparency Calculation Configuration
TRANSPARENCY_DEGRADATION_FACTOR=0.95
TRANSPARENCY_CALCULATION_TIMEOUT=30

# Docker Configuration
DOCKER_REGISTRY=registry.common.com
IMAGE_TAG=${IMAGE_TAG:-latest}

# Monitoring Configuration
SENTRY_DSN=${SENTRY_DSN_PRODUCTION}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}
DATADOG_API_KEY=${DATADOG_API_KEY}

# Grafana Configuration
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}
GRAFANA_SECRET_KEY=${GRAFANA_SECRET_KEY}
GRAFANA_DB_HOST=grafana-db.common.com
GRAFANA_DB_NAME=grafana
GRAFANA_DB_USER=grafana_user
GRAFANA_DB_PASSWORD=${GRAFANA_DB_PASSWORD}

# SMTP Configuration
SMTP_HOST=smtp.common.com
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}

# External Services
ELASTICSEARCH_HOST=elasticsearch.common.com
ELASTICSEARCH_PORT=9200

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/common.crt
SSL_KEY_PATH=/etc/ssl/private/common.key

# Backup Configuration
BACKUP_S3_BUCKET=common-production-backups
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-east-1

# Performance Configuration
CELERY_WORKER_CONCURRENCY=8
CELERY_MAX_TASKS_PER_CHILD=1000
GUNICORN_WORKERS=4
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Cache Configuration
CACHE_TTL=600
CACHE_MAX_SIZE=10000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,csv,xlsx

# Security Configuration
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_FRAME_DENY=True

# Auto Scaling Configuration
AUTO_SCALING_ENABLED=True
MIN_REPLICAS=4
MAX_REPLICAS=20
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80

# CDN Configuration
CDN_ENABLED=True
CDN_URL=https://cdn.common.com

# WAF Configuration
WAF_ENABLED=True
DDOS_PROTECTION_ENABLED=True

# Compliance Configuration
GDPR_COMPLIANCE=True
SOC2_COMPLIANCE=True
ISO27001_COMPLIANCE=True

# Audit Configuration
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_ENCRYPTION=True

# Disaster Recovery
DR_ENABLED=True
DR_REGION=us-west-2
RTO_MINUTES=60  # Recovery Time Objective
RPO_MINUTES=15  # Recovery Point Objective
