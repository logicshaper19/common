# Staging Environment Configuration

# Application Configuration
APP_NAME=Common Supply Chain Platform
APP_VERSION=1.0.0
ENVIRONMENT=staging
DEBUG=False
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://common_staging_user:${POSTGRES_PASSWORD}@staging-db.common.com:5432/common_staging
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}

# Redis Configuration
REDIS_URL=redis://staging-redis.common.com:6379/0

# JWT Configuration
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
RESEND_API_KEY=${RESEND_API_KEY}

# CORS Configuration
ALLOWED_ORIGINS=https://app-staging.common.com,https://admin-staging.common.com

# Transparency Calculation Configuration
TRANSPARENCY_DEGRADATION_FACTOR=0.95
TRANSPARENCY_CALCULATION_TIMEOUT=30

# Docker Configuration
DOCKER_REGISTRY=registry.staging.common.com
IMAGE_TAG=${IMAGE_TAG:-latest}

# Monitoring Configuration
SENTRY_DSN=${SENTRY_DSN_STAGING}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}

# Grafana Configuration
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}
GRAFANA_SECRET_KEY=${GRAFANA_SECRET_KEY}

# External Services
ELASTICSEARCH_HOST=elasticsearch-staging.common.com
ELASTICSEARCH_PORT=9200

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/staging.crt
SSL_KEY_PATH=/etc/ssl/private/staging.key

# Backup Configuration
BACKUP_S3_BUCKET=common-staging-backups
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-west-2

# Performance Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_MAX_TASKS_PER_CHILD=1000
GUNICORN_WORKERS=2
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,csv,xlsx

# Security Configuration
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_FRAME_DENY=True
